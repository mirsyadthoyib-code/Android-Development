<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#38c9e2"
    tools:context="com.example.user.smartwalkingcharger.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="690sp"
            android:src="@drawable/ic_background"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:paddingBottom="5sp"
            android:background="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="120sp"
        android:paddingBottom="20sp"
        android:paddingRight="30sp"
        android:paddingLeft="30sp"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/startbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85sp"
            android:text="Start"
            android:textColor="@color/background"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="330sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/totalkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="44sp"
            android:text="Total KM"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/namaPoint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalmah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="44sp"
            android:text="Total mAh"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/namaPoint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/datatotalkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/totalkm"
            android:paddingLeft="45sp"
            android:text="12.3"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dataPoint"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/totalkm"
            android:paddingRight="46sp"
            android:text="4200"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dataPoint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalcalor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/datatotalkm"
            android:paddingLeft="27sp"
            android:text="Total Calories"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/namaPoint"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/datatotalkm"
            android:paddingRight="44sp"
            android:text="Total Step"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/namaPoint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/datatotalcalor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/totalcalor"
            android:paddingLeft="37sp"
            android:text="69.5K"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dataPoint"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/totalcalor"
            android:paddingRight="57sp"
            android:text="367"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dataPoint"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>