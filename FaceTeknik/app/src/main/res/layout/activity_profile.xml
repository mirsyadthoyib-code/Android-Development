<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorundprofil">

    <Button
        android:id="@+id/homebtn_activity_profile"
        android:layout_width="54dp"
        android:layout_height="33dp"
        android:background="@drawable/backbtn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="350dp"/>

    <ImageView
        android:id="@+id/profilepict_activity_profile"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/layoutaddfriendpict"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/username_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Username"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/edit_username_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Username"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/fullname_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Fullname Fullname"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_fullname_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Fullname Fullname"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="450sp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="E-mail"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/edit_email_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="450sp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="E-mail"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/birthdate_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Birth Date"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/edit_birthdate_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Birth Date"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/bio_activity_profile"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center_horizontal"
        android:text="Bio BIO BIO BIO BIO BIO BIO IBOBI AAIWDNAOWIDNAIWNDIAWODN ASOIJDASOIDJASOIJD ASDIJASODJASOIDJAS ASIJDASDOIJ"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edit_bio_activity_profile"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center_horizontal"
        android:text="Insert Bio"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/savebtnprofile_activity_profile"
        android:layout_width="159dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        android:background="@drawable/saveprofilebtn" />

</RelativeLayout>